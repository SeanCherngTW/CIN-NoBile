<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbarInsert"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uuuu"
        android:layout_below="@+id/toolbarInsert">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/titleText"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/radiogroup"
        android:layout_below="@+id/uuuu">

    </FrameLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center|center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/radiogroup"
        android:layout_gravity="center"
        android:layout_above="@+id/linearLayout"
        android:button="@drawable/radio_button"
        android:layout_centerHorizontal="true">

        <RadioButton
            style="@drawable/dot_blue"
            android:id="@+id/radioButton"
            android:checked="false"/>

        <RadioButton
            style="@drawable/dot_blue"
            android:id="@+id/radioButton2"
            android:checked="true"/>

        <RadioButton
            style="@drawable/dot_blue"
            android:id="@+id/radioButton3"
            android:layout_centerHorizontal="true"
            android:checked="false"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignWithParentIfMissing="false">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btStat"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp"
            android:src="@mipmap/m_bt_stat" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btMission"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp"
            android:src="@mipmap/m_bt_mission" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btSetting"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp"
            android:src="@mipmap/m_bt_setting" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btPoint"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp"
            android:src="@mipmap/m_bt_point" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btLeaderboard"
            android:padding="3dp"
            android:layout_marginLeft="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="2dp"
            android:src="@mipmap/m_bt_leaderboard" />

    </LinearLayout>

</RelativeLayout>